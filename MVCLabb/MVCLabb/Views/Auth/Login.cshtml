@model DataAccessLayer.Users
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.DisplayNameFor(u => u.Email);
    @Html.TextBoxFor(u => u.Email, new { @class = "form-control", Placeholder = "Password" });
    @Html.DisplayNameFor(u => u.Password);
    @Html.PasswordFor(u => u.Password, new { @class = "form-control", Placeholder = "Password" });
    <br />
    @Html.ActionLink("Register a new account?", "/Auth/Registration");
    <button type="submit" class="btn btn-default">Login</button>

    
}

