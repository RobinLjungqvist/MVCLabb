@model DataAccessLayer.Gallery

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Gallery</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GalleryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GalleryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Add Picture", "Create", "Pictures", new { GalleryID = Model.id }, null)
</div>
<div>
    @if (Model.Pictures != null)
    {
        foreach (var picture in Model.Pictures)
        {
            <div id="@picture.id" class="picture-box">
                <img src="@Url.Content($"{picture.Path}")" alt="@picture.Description" class="picture" width="300" />
                @Html.ActionLink("Details", "Details", "Pictures")
            </div>
        }
    }
    else
    {
        <h2>Empty Gallery</h2>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
