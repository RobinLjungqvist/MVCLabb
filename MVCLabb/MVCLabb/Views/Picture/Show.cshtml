@model IEnumerable<MVCLabb.Models.PictureViewModel>

    <p>
    @Html.ActionLink("Back to List", "Index", "Gallery")
    </p>
<div class="row">
    @if (Model.Count() != 0)
    {

        foreach (var picture in Model)
        {
            <div class="col-md-3">
                <a href='@Url.Action("Details", "Picture", picture)'>
                    <img src="@Url.Content($"{picture.Path}")" alt="@picture.Description" style="width: 300px" class="img-thumbnail" />
                </a>
            </div>
        }
    }
    else
    {
        <h2>Empty Gallery!</h2>
    }
</div>
<div class="row">
    <p class="col-md-12">
        @Html.ActionLink("Back to List", "Index", "Gallery")
    </p>
</div>